@* @model dynamic *@
@{
    ViewData["Title"] = "MiniShop - Sản phẩm nổi bật";
    var products = ViewData["Products"] as List<MiniShop.Web.Models.Product> ?? new();
}

<div class="row">
    @foreach (var product in products)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Category</p>
                    <p class="text-success fw-bold fs-4">@product.Price.ToString("N0") VNĐ</p>
                </div>
            </div>
        </div>
    }
</div>