@model MiniShop.Web.Models.Product
@{
    ViewData["Title"] = Model?.Name ?? "Chi tiết sản phẩm";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>@Model.Name</h2>
                </div>
                <div class="card-body">
                    <p><strong>Danh mục:</strong> @Model.Category</p>
                    <p class="display-6 text-success">@Model.Price.ToString("N0") VNĐ</p>
                    <a asp-action="Index" class="btn btn-primary">← Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </div>
</div>
