@model List<MiniShop.Web.Models.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h2>Danh sách sản phẩm</h2>

<h2>@ViewData["PageTitle"] (@ViewData["Total"] sản phẩm)</h2>
<h3 class="text-primary">@ViewBag.CurrentCategory</h3>

@if (TempData["Deleted"] != null)
{
    <div class="alert alert-success">@TempData["Deleted"]</div>
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Category</p>
                    <p class="text-success fs-4 fw-bold">@product.Price.ToString("N0") VNĐ</p>
                    <a asp-action="Details" asp-route-id="@product.Id"
                       asp-route-slug="@product.Name.ToLower().Replace(" ", "-")"
                       class="btn btn-primary">Chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>

<a asp-action="Index" asp-controller="Home" class="btn btn-secondary">← Quay lại Home</a>
<a asp-action="Delete" asp-route-id="1" class="btn btn-danger">Xóa ID 1</a>
